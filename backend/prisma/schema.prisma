generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum UserType {
  Paciente
  Medico
  Farmacia
  Laboratorio
}

model Profile {
  id           String    @id
  name         String
  surname      String?
  type         UserType  @default(Paciente)
  imageUrl     String?   @map("image_url")
  weight       Float?
  height       Float?
  healthStatus String?   @map("health_status")
  createdAt    DateTime  @default(now()) @map("created_at")

  // Profiles
  patient      Patient?
  doctor       Doctor?
  pharmacy     Pharmacy?
  laboratory   Laboratory?
  
  // Articles
  articles      Article[]
}

model Patient {
  id          String   @id @default(uuid())
  profile     Profile  @relation(fields: [profileId], references: [id])
  profileId   String   @unique @map("profile_id")
  birthDate   DateTime?
  gender      String?
  weight      Float?
  height      Float?
  phone       String?
  address     String?
  city        String?
  country     String?
  bloodType   String?
  allergies   String?
}

model Doctor {
  id                   String   @id @default(uuid())
  profile              Profile  @relation(fields: [profileId], references: [id])
  profileId            String   @unique @map("profile_id")
  name                 String?
  specialty            String?
  license              String?
  description          String?
  address              String?
  city                 String?
  experienceYears      Int?
  consultationPrice    Float?
  insuranceAffiliations String?
  imageUrl             String?
}

model Pharmacy {
  id           String   @id @default(uuid())
  profile      Profile  @relation(fields: [profileId], references: [id])
  profileId    String   @unique @map("profile_id")
  name         String?
  address      String?
  city         String?
  description  String?
  openingHours String?
  closingHours String?
  hasDelivery  Boolean? @default(false)
  imageUrl     String?
}

model Laboratory {
  id           String   @id @default(uuid())
  profile      Profile  @relation(fields: [profileId], references: [id])
  profileId    String   @unique @map("profile_id")
  name         String?
  testTypes    String?
  address      String?
  city         String?
  description  String?
  openingHours String?
  closingHours String?
  imageUrl     String?
}

model Article {
  id          String   @id @default(uuid())
  title       String
  content     String
  type        UserType // Medico, Farmacia, Laboratorio
  author      Profile  @relation(fields: [authorId], references: [id])
  authorId    String
  publishDate DateTime @default(now())
}
